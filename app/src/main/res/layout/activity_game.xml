<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    tools:ignore="HardCodedText">

    <!--        Load Game       -->
    <TextView
        android:id="@+id/RecallStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Current Round: 1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:letterSpacing="0.1"
        android:layout_weight="7"
        android:lineSpacingExtra="8sp"
        android:elevation="4dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/BestStreak"
        />
    <TextView
        android:id="@+id/BestStreak"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Best Round: 1"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textAlignment="textStart"
        android:letterSpacing="0.1"
        android:layout_weight="7"
        android:lineSpacingExtra="8sp"
        android:elevation="4dp"
        android:layout_marginStart="5dp"
        app:layout_constraintTop_toBottomOf="@id/RecallStreak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/StartGame"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ripple"
        android:contentDescription="@string/app_name"
        android:scaleType="fitXY"
        android:src="@drawable/start2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/GridLayout1"/>

    <TextView
        android:id="@+id/Rounds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Round 1"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center"
        android:letterSpacing="0.1"
        android:layout_weight="7"
        android:lineSpacingExtra="8sp"
        android:elevation="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/BestStreak"
        app:layout_constraintBottom_toTopOf="@id/InputStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/InputStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30sp"
        android:textAlignment="center"
        android:letterSpacing="0.1"
        android:layout_weight="7"
        android:lineSpacingExtra="8sp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/Rounds"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/Question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:textAlignment="center"
        android:letterSpacing="0.1"
        android:layout_weight="7"
        android:lineSpacingExtra="8sp"
        android:elevation="4dp"
        android:maxLines="1"
        android:ellipsize="start"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/InputStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/Answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textAlignment="textEnd"
        android:letterSpacing="0.1"
        android:layout_weight="7"
        android:lineSpacingExtra="8sp"
        android:elevation="4dp"
        android:maxLines="1"
        android:ellipsize="start"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toTopOf="@id/GridLayout1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <Button
            android:id="@+id/n7"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:radius="8dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n8"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n9"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/lCE"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="CE"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n4"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n5"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n6"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/lC"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="DEL"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n3"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/lq"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:backgroundTint="#2196F3"
            android:text="\?"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/n0"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:layout_columnSpan="2"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/nR"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:backgroundTint="#F44336"
            android:text="RES"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
        <Button
            android:id="@+id/nS"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:background="@drawable/btn_status"
            android:backgroundTint="#4CAF50"
            android:text="SUB"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_columnWeight="1"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:elevation="4dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"/>
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>